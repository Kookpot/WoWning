@page
@inject IViewLocalizer Localizer
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = Localizer["Recovery code verification"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    @Localizer["You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA and log in again."]
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-ambulance"></i></span>
                    </div>
                    <input asp-for="Input.RecoveryCode" placeholder="@Localizer["Recovery code"]" class="form-control" />
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Log in"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@inject IViewLocalizer Localizer
@model SetPasswordModel
@{
    ViewData["Title"] = Localizer["Set password"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@Localizer["Set your password"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    @Localizer["You do not have a local email/password for this site. Add a local account so you can log in without an external login."]
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="Input.NewPassword" placeholder="@Localizer["New Password"]" class="form-control" />
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="Input.ConfirmPassword" placeholder="@Localizer["Confirm Password"]" class="form-control" />
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Set password"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
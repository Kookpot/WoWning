@page
@inject IViewLocalizer Localizer
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<h1>@ViewData["Title"]</h1>
<h4>@Localizer["Associate your"] @Model.LoginProvider @Localizer["account"].</h4>
<hr />

<p class="text-info">
    @Localizer["You've successfully authenticated with"] <strong>@Model.LoginProvider</strong>.
    @Localizer["Please enter an email address for this site below and click the Register button to finish logging in."]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-at"></i></span>
                    </div>
                    <input asp-for="Input.Email" placeholder="@Localizer["Email"]" class="form-control" />
                    <div class="invalid-feedback" style="display:block;">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
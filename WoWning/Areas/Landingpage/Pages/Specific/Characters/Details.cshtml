@page
@inject IViewLocalizer Localizer
@model WoWning.Areas.Landingpage.Pages.Specific.Characters.DetailsModel

@{
    ViewData["Title"] = Localizer["Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Character"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.ServerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.ServerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.SideName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.SideName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Professions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Professions)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character.Id">@Localizer["Edit"]</a> |
    <a asp-page="./Index">@Localizer["Back to List"]</a>
</div>
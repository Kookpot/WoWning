@page
@inject IViewLocalizer Localizer
@model WoWning.Areas.Landingpage.Pages.Specific.Characters.DeleteModel

@{
    ViewData["Title"] = Localizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Character"]</h4>
    <hr />
    <p class="text-danger">@Model.ErrorMessage</p>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.ServerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.ServerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.SideName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.SideName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Professions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Professions)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Character.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back to List"]</a>
    </form>
</div>